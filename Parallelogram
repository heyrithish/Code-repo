//To find the area of a parallelogram
#include<stdio.h>
int main()
{
    float a,b,ar;
    printf("Enter the value of the base length: ");
    scanf("%f",&a);
    printf("Enter the value of the height: ");
    scanf("%f",&b);
    ar=a*b;
    printf("The area of the parallelogram with dimensions base x height %g x %g is %g.",a,b,ar);
    return 0;

}
