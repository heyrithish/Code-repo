//To find the perimeter of a rectangle
#include<stdio.h>
int main()
{
    float l,b,p;
    printf("Enter the value of the length of the rectangle: ");
    scanf("%f",&l);
    printf("Enter the value of the breadth of the rectangle: ");
    scanf("%f",&b);
    p=2*(l+b);
    printf("The perimeter of the rectangle with dimensions %g x %g is %g.",l,b,p);
    return 0;

}
