//To find the volume and surface area of a cylinder
#include<stdio.h>
#include<math.h>
int main()
{
    float r,h,vol,ar;
    printf("Enter the value of the radius of the cyclinder: ");
    scanf("%f",&r);
    printf("Enter the value of the height of the cylinder: ");
    scanf("%f",&h);
    vol=(3.14*pow(r,2)*h);
    ar=(2*3.14*r*h);
    printf("\nThe Volume of a cylinder with radius and height %g x %g is %g cubic units",r,h,vol);
    printf("\nThe Surface area of a cylinder with radius and height %g x %g is %g square units.",r,h,ar);
    return 0;

}
