//To print AP series
#include<stdio.h>
int main()
{
    int a,n,d,i,t;
    printf("Input the first term of the series: ");
    scanf("%d",&a);
    printf("Input the common difference of the series: ");
    scanf("%d",&d);
    printf("Input no. of terms in the series: ");
    scanf("%d",&n);
    
for(i=1;i<=n;i++)
{
    t=a+((i-1)*d);
    printf("%d\t",t);
    t=0;
}
    return 0;
}
