//To print AP series
#include<stdio.h>
int main()
{
    int a,n,d,i,series;
    printf("Input the first number of the series: ");
    scanf("%d",&a);
    printf("Input the common difference of the series: ");
    scanf("%d",&d);
    printf("Input no. of terms in the series: ");
    scanf("%d",&n);
    
for(i=1;i<=n;i++)
{
    series=a+((i-1)*d);
    printf("%d\t",series);
    series=0;
}
    return 0;
}
