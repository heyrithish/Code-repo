//To find the volume and surface area of a cone
#include<stdio.h>
#include<math.h>
int main()
{
    float r,h,l,vol,ar;
    printf("Enter the value of the radius of the cone: ");
    scanf("%f",&r);
    printf("Enter the value of the height of the cone: ");
    scanf("%f",&h);
    vol=(3.14*pow(r,2)*h)/3;
    ar=(3.14*r*(r*sqrt(pow(h,2)*pow(r,2))));
    printf("\nThe Volume of a cone with radius and height %g x %g is %g cubic units",r,h,vol);
    printf("\nThe Surface area of a cone with radius and height %g x %g is %g square units.",r,h,ar);
    return 0;

}
